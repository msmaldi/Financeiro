<environment include="Development">
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/globalize/globalize.js"></script>
    <script src="~/lib/globalize/cultures/globalize.culture.pt-BR.js"></script>
    <script src="~/lib/jquery-validation-globalize/jquery.validate.globalize.js"></script>
    <script>
$(document).ready(function () {
    Globalize.culture('pt-BR');
});
    </script>
</environment>
<environment exclude="Development">
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"
            asp-fallback-src="~/lib/jquery-validation/dist/jquery.validate.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.9/dist/jquery.validate.unobtrusive.min.js"
            asp-fallback-src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive">
    </script> 
    <script src="https://cdn.jsdelivr.net/npm/globalize@0.1.1/dist/globalize.min.js"
            asp-fallback-src="~/lib/globalize/globalize.min.js"
            asp-fallback-test="window.Globalize">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/globalize@0.1.1/lib/cultures/globalize.culture.pt-BR.min.js"            
            asp-fallback-src="~/lib/globalize/cultures/globalize.culture.pt-BR.min.js"
            asp-fallback-test="window.Globalize.cultures['pt-BR']"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-globalize@0.1.1/jquery.validate.globalize.min.js"
            asp-fallback-src="~/lib/jquery-validation-globalize/jquery.validate.globalize.min.js"
            asp-fallback-test="$.validator.methods.date!='function (a,b){return this.optional(b)||!/Invalid|NaN/.test(new Date(a).toString())}'"></script>
    <script>$(document).ready(function(){Globalize.culture('pt-BR');});</script>
</environment>