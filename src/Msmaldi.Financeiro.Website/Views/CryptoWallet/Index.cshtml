@model IEnumerable<Msmaldi.Financeiro.Website.BusinessLogic.CryptoCurrencies.PosicaoConsolidadaCryptoCurrency<CryptoWallet>>
@{ ViewData["Title"] = "Criptomoedas"; }
<h2>@ViewData["Title"]</h2>
<p><a asp-action="Create">Incluir novo</a></p>
<hr />
<div class="row">
@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Carteira - @item.CryptoWallet.Label - @item.CryptoWallet.CriptoCurrencyId
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>Ativo:</dt>
                    <dd>@item.CryptoWallet.CriptoCurrencyId</dd>
                    <dt>Pre&ccedil;o Unit&aacute;rio:</dt>
                    <dd>@item.CryptoWallet.ValorDeAquisicao.ToString("C")</dd>
                    <dt>Quantidade:</dt>
                    <dd>@item.CryptoWallet.Quantidade</dd>
                    <dt>Valor Bruto:</dt>
                    <dd>@item.ValorBruto.ToString("C")</dd>
                    @{
                        var color = item.RendimentoBruto > 0.0 ? "color-green" :
                                    item.RendimentoBruto < 0.0 ? "color-red" : "";
                        
                        var lucroOuPrejuizo = item.RendimentoBruto > 0.0 ? "Lucro" : "Preju√≠zo";
                    }
                    <dt>@lucroOuPrejuizo :</dt>
                    <dd class="@color">@item.RendimentoBruto.ToString("C")</dd>
                </dl>
                <div class="text-center">
                    <a class="btn btn-default" asp-action="Delete" asp-route-id="@item.CryptoWallet.Id">Excluir</a>
                </div>
            </div>
        </div>
    </div>
}
</div>