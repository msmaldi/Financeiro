@model Msmaldi.Financeiro.Website.Models.CryptoWalletViewModels.CryptoWalletViewModel
@{ ViewData["Title"] = "Create"; }
<h2>Incluir</h2>   
<div class="row">
    <div class="col-sm-6 col-md-4">
        <form asp-action="Create">
            <div class="form-horizontal">
                <h4>Carteira de Criptomoeda</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="CriptoCurrencyId" class="col-sm-6 control-label"></label>
                    <div class="col-sm-6">
                        <select asp-for="CriptoCurrencyId" class="form-control"  asp-items="@ViewBag.CryptoCurrencies"></select>
                    </div>
                    <div class="col-xs-offset-1 col-sm-offset-2">
                        <span asp-validation-for="CriptoCurrencyId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Label" class="col-sm-6 control-label"></label>
                    <div class="col-sm-6">
                        <input autofocus type="text" asp-for="Label" class="form-control" />
                    </div>
                    <div class="col-xs-offset-1 col-sm-offset-2">
                        <span asp-validation-for="Label" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Quantidade" class="col-sm-6 control-label"></label>
                    <div class="col-sm-6">
                        <input autofocus type="text" asp-for="Quantidade" class="form-control" />
                    </div>
                    <div class="col-xs-offset-1 col-sm-offset-2">
                        <span asp-validation-for="Quantidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ValorDeAquisicao" class="col-sm-6 control-label"></label>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <span class="input-group-addon">R$</span>
                            <input autofocus type="text" asp-for="ValorDeAquisicao" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xs-offset-1 col-sm-offset-2">
                        <span asp-validation-for="ValorDeAquisicao" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <input type="submit" value="Incluir" class="btn btn-default" />
                        <a asp-action="Index" class="btn btn-default">Voltar a lista</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }