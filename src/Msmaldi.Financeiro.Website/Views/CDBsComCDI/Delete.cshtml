@model Msmaldi.Financeiro.Website.Entities.CDBComCDI
@{ ViewData["Title"] = "Delete"; }

<div class="row">
    <div class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-12">
        <h2>Excluir</h2>
        <h3>Voc&ecirc; quer excluir isso?</h3>
        <div>
            <hr />
            <div class="panel panel-default">
                <div class="panel-heading">
                    CDB com CDI @Model.Taxa.ToString("0.00%")
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>Data da Aplica&ccedil;&atilde;o:</dt>
                        <dd>@Model.DataDaAplicacao.ToString("dd/MM/yyyy")</dd>
                        <dt>Data do Vencimento:</dt>
                        <dd>@Model.DataDoVencimento.ToString("dd/MM/yyyy")</dd>
                        <dt>Pre&ccedil;o Unit&aacute;rio:</dt>
                        <dd>@Model.PrecoUnitario.ToString("#.00")</dd>
                        <dt>Quantidade:</dt>
                        <dd>@Model.Quantidade</dd>
                    </dl>
                </div>
            </div>
            <form asp-action="Delete">
                <div class="text-center">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-actions no-color">
                        <input type="submit" value="Sim, eu quero excluir" class="btn btn-default" />
                    </div> <hr />
                    <a asp-action="Index">Voltar a Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>